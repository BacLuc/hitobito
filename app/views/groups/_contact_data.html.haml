.contactable.well
  = render 'contactable/show_addresses',
           contactable: group,
           postal: group.contact.blank?,
           only_public: only_public

  - if group.contact
    %div.contact
      %br
      .muted
        %i.icon-user.icon-muted
        %strong Kontaktperson
      = render 'contactable/show_addresses',
               contactable: group,
               contact: group.contact,
               postal: true,
               only_public: true