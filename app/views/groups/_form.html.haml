    = f.hidden_field :parent_id
    = f.hidden_field :type
    
  = field_set_tag do
    = f.labeled_input_fields(:name, :short_name)
    = f.labeled_input_field(:contact_id, help_inline: 'Adresse und Ã¶ffentliche Telefonnummern dieser Person verwenden.')
    
  = render 'contactable/fields', f: f 
  
  = render_extensions :fields, locals: { f: f }
