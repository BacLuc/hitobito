
#main.row-fluid
  %article.span5
    = render 'contactable/show', contactable: entry, only_public: cannot?(:show_details, entry)
    
    %h2 Weitere Angaben
    - if entry.additional_information.present?
      %h4 Bemerkungen
      = simple_format(entry.additional_information)

    = render_attrs(entry, :birthday, :gender)
    
    = render_extensions :attrs

    = render_attrs(entry, :created_info, :updated_info) if can?(:show_details, entry)

  -if can?(:show_full, entry)
    %aside.span6.offset1
      = render 'roles'
      = render 'event_aside', title: 'Anmeldungen', collection: @pending_applications
      = render 'event_aside', title: 'Anl√§sse', collection: @upcoming_events
      = render 'qualifications'

