- @sheets = GroupSheet.new(self, @group)

= render 'groups/tabs'

- content_for :toolbar do
  = dropdown_button('Person hinzf√ºgen', @group.possible_role_links, :plus) if can?(:new, Role)

  = button_group do
    = action_button('List importieren', '#', :download)
    = action_button('Export', '#', :upload)
      
  = action_button('Drucken', '#', :print)

= crud_table do |t|
  -# Any person listed can be shown
  - t.col('Name')    {|p| link_to(p.to_s, group_person_path(@group, p)) }
  - t.col('Rolle')   {|p| render_roles(p) }
  - t.attr :email
  - t.col('Telefon') {|p| render_phone_numbers(p) }
  - t.col('Adresse') {|p| render_address(p) }
  - t.col('Social')  {|p| render_social_accounts(p) }

