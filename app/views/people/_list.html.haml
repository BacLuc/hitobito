- @sheets = GroupSheet.new(self, @group, :group_people_path, :index_people)

= render 'groups/tabs'

- content_for :toolbar do
  = dropdown_button('Person hinzf√ºgen', @group.possible_role_links, :plus) if can?(:new, @group.roles.new)

  = button_group do
    = action_button('List importieren', '#', :download)
    = action_button('Export', '#', :upload)
      
  = action_button('Drucken', '#', :print)
  
  .pull-right
    = dropdown_button(@group.filter_name, @group.people_filter_links)

= crud_table do |t|
  -# Any person listed can be shown
  - t.col('Name')    {|p| link_to(p.to_s, @multiple_groups ? person_path(p) : group_person_path(@group, p)) }
  - t.col('Rolle')   {|p| render_roles(p, @multiple_groups ? nil : @group) }
  - t.col('Email')   {|p| p.prim_email }
  - t.col('Telefon') {|p| p.all_phone_numbers }
  - t.col('Adresse') {|p| p.complete_address }
  - t.col('Social')  {|p| p.all_social_accounts }

