- show_buttons = current_page?(controller: 'people', action: 'show')
= section_table('Qualifikationen', @qualifications,
                show_buttons ? new_group_person_qualification_path(parent, entry) : nil) do |item|
  %td
    %strong= item.qualification_kind
  %td= f(item.origin)
  %td= format_attr(item, :finish_at)
  - if show_buttons && can?(:destroy, item)
    %td= link_action_destroy(group_person_qualification_path(parent, entry, item))
