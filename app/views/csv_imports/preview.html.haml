%h3= "Folgende Personen werde mit <strong>Rolle #{role_name}</strong> in die <strong>Gruppe #{group}</strong> importiert.".html_safe
//%div{style: 'width: 100%; overflow: auto; margin: 1em;' }
%div
  = list_table do |t|
    - t.col("") do |p|
      - if p.persisted?
        %i.icon.icon-refresh{title: 'wird aktualisiert'}
      - else
        %i.icon.icon-plus{title: 'wird neu importiert'}

    - t.attrs *relevant_attrs

    - [:phone_numbers, :social_accounts].each do |contact_type|
      - relevant_contacts(contact_type) do |account|
        - t.col(account[:value]) { |p| contact_value(account[:key], p.phone_numbers) }


= standard_form(:csv_import, url: group_csv_imports_path, builder: PlainObjectFormBuilder) do |f|
  = render 'hidden_form_fields'
  .btn-toolbar
    .btn-group
      = f.submit('Personen importieren', class: 'btn btn-primary')
    .btn-group
      = f.button('Zur√ºck', class: 'btn btn-secondary')
    = link_to('Abbrechen', group_people_path(group), class: 'link')

