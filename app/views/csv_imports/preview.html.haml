%h3
  Folgende Personen werden mit der
  %strong
    Rolle
    =role_name
  in die
  %strong
    Gruppe
    =group
  importiert.

%div{style: 'max-height: 500px; margin-bottom: 20px; overflow: auto;'}
  = list_table do |t|
    - t.col("") do |p|
      - if p.persisted?
        %i.icon.icon-refresh{title: 'Wird aktualisiert'}
      - else
        %i.icon.icon-plus{title: 'Wird neu erfasst'}

    - t.attrs *relevant_attrs

    - [:phone_numbers, :social_accounts].each do |contact_type|
      - relevant_contacts(contact_type) do |account|
        - t.col(account[:value]) { |p| contact_value(account[:key], p.phone_numbers) }


= standard_form(:field_mappings, url: group_csv_imports_path, builder: PlainObjectFormBuilder) do |f|
  = render 'hidden_form_fields'
  .btn-toolbar
    .btn-group
      = f.submit('Personen jetzt importieren', class: 'btn btn-primary')
    .btn-group
      = f.button('Zur√ºck', class: 'btn btn-secondary', value: 'back')
    = link_to('Abbrechen', group_people_path(group), class: 'link')

