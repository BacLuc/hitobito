-title 'Passwort ändern'

= standard_form(resource, {url: password_path(resource_name), method: :put}) do |f|
  = f.hidden_field :reset_password_token
  = f.error_messages
  = f.labeled(:password, 'Neues Passwort') { f.input_field(:password) } 
  = f.labeled(:password_confirmation, 'Passwort bestätigen') { f.input_field(:password_confirmation) } 
  = f.indented do
    = submit_button(f, 'Passwort ändern')
