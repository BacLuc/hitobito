.pagination-bar
  = paginate notes, param_name: :notes_page, params: { anchor: 'person-notes' }

  .pagination-info
    - if notes.total_count == 0
      = ti(:no_list_entries)

- if notes.total_count > 0
  #person-notes-list
    - notes.each do |note|
      = render note, show_person: show_person

