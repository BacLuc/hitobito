!!! 5

%html
  %head
    %meta{:charset => 'utf-8'}
    %title= strip_tags(@title)
    = csrf_meta_tag

    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag 'ie.css', :media => 'all'
    <![endif]-->

    <!--[if IE 7]>
    = stylesheet_link_tag 'ie7.css', :media => 'all'
    <![endif]-->

    = stylesheet_link_tag 'application.css', :media => 'all'

    = yield :head

  %body

    %header
      .container-fluid
        = link_to 'Jubla', root_path, :class => 'brand'
        .options
          = render 'layouts/options'

    %nav
      -#.container-fluid
        -#= render 'layouts/nav'

    #page
      .container-fluid
        .sheet.parent
          .breadcrumb 
            %ul
              %li
                = link_to 'Bund', root_path
                %span.divider /
              %li
                = link_to 'Kanton Bern', root_path
                %span.divider /
          = link_to 'AG AlkoholprÃ¤vention', root_path, :class => 'level active'
          .sheet.current
            .container-shadow
              #content
                / .actions.btn-toolbar
                /   .pull-right= yield :actions
                /   .pull-left= yield :tools
                = render :partial => 'layouts/flash', :collection => [:notice, :alert], :as => :level
                = yield

    %footer
      .container-fluid
        .row
          .span3
            = image_tag('logo_jubla.png')
          .footer_content.span9
            %p
              &copy; Puzzle ITC #{Time.zone.now.year}

  = javascript_include_tag 'application'
  = javascript_tag yield(:javascripts) if content_for?(:javascripts)
