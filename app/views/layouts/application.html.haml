!!! 5

%html
  %head
    %meta{:charset => 'utf-8'}
    %title= Jubla
    = csrf_meta_tag

    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag 'ie.css', :media => 'all'
    <![endif]-->

    <!--[if IE 7]>
    = stylesheet_link_tag 'ie7.css', :media => 'all'
    <![endif]-->

    = stylesheet_link_tag 'application.css', :media => :screen
    = stylesheet_link_tag 'print.css', :media => :print

    = yield :head

  %body

    %header#page-header
      .container-fluid
        // Logo
        = link_to 'jubla.db', root_path, :class => 'brand'
        // Navigation
        %nav#page-navigation
          - if current_user
            = render 'layouts/nav'
        // Options
        .options
          = render 'layouts/options'
        
    #page
      .container-fluid
        = render_sheets do
          .content-header
            %h1= title
            = sheet.render_main_tabs
          .btn-toolbar
            = yield :toolbar
          #flash
            = render :partial => 'layouts/flash', :collection => [:notice, :alert], :as => :level
          = content_for?(:content) ? yield(:content) : yield

    %footer#page-footer
      .container-fluid
        .row
          .span3
            = image_tag('logo_jubla.png')
          .footer_content.span9
            %p
              Version
              = Wagons.app_version
            %p
              &copy; Puzzle ITC #{Time.zone.now.year}

  = javascript_include_tag 'application'
  = yield(:js_includes)
  = javascript_tag yield(:javascripts) if content_for?(:javascripts)
