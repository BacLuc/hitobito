!!! 5

%html
  %head
    %meta{:charset => 'utf-8'}
    %title= Jubla
    = csrf_meta_tag

    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag 'ie.css', :media => 'all'
    <![endif]-->

    <!--[if IE 7]>
    = stylesheet_link_tag 'ie7.css', :media => 'all'
    <![endif]-->

    = stylesheet_link_tag 'application.css', :media => :screen
    = stylesheet_link_tag 'print.css', :media => :print

    = yield :head

  %body

    %header#page-header
      .container-fluid
        = link_to 'jubla.db', root_path, :class => 'brand'

        - if current_user
          = render 'layouts/nav'
        - else
          = render 'layouts/unauthorized'

    #page
      .container-fluid
        = render_sheets do
          .content-header
            %h1= title
            = sheet.render_main_tabs

          = yield :filter
          - if content_for?(:toolbar)
            .btn-toolbar= yield :toolbar

          = render :partial => 'layouts/flash', :collection => [:notice, :alert], :as => :level

          = content_for?(:content) ? yield(:content) : yield

    %footer#page-footer
      .container-fluid
        .row
          .span3
            = link_to image_tag('logo_jubla.png'), 'http://www.jubla.ch'
          .footer_content.span9
            %p
              = link_to 'Fragen und Anregungen', 'http://feedback.jubla.ch', target: '_blank'
              %br/
              = link_to 'Hilfe', 'http://jubla.ch/datenbank', target: '_blank'
            %p
              Version
              = Wagons.app_version
              %br/
              &copy;
              = link_to 'Puzzle ITC', 'http://puzzle.ch', target: '_blank'
              = Time.zone.now.year

  = javascript_include_tag 'application'
  = yield(:js_includes)
  = javascript_tag yield(:javascripts) if content_for?(:javascripts)
