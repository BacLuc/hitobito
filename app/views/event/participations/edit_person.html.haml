- title t('event.participations.form.title_new', role: entry.roles.first.class.model_name.human)
= render 'stepwizard', current_step: 1

= crud_form(current_person,
      url: group_person_path(group, current_user),
      method: :put,
      cancel_url: group_public_event_path(group, event),
      buttons_bottom: true,
      submit_label: t('global.button.next')) do |f|

  = field_set_tag do
    = f.labeled_input_fields :first_name, :last_name, :nickname, :company_name, :company

    = render_extensions :name_fields, locals: { f: f }

  = render 'contactable/fields', f: f

  = render_extensions :fields, locals: { f: f }

  = hidden_field_tag('return_url', new_group_event_participation_path(group, event))
