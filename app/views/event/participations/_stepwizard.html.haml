.stepwizard
  .stepwizard-step{class: (current_step == 1 ? 'is-current' : 'is-disabled')}
    %a.stepwizard-link{href: '#'}
      .stepwizard-number
        1
      .stepwizard-title
        = t('.contact_details')
  .stepwizard-step{class: (current_step == 2 ? 'is-current' : 'is-disabled')}
    %a.stepwizard-link{href: '#'}
      .stepwizard-number
        2
      .stepwizard-title
        = t('.registration')
