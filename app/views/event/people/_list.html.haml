- parent_sheet GroupSheet.new(self, @group)
- title @event.name

= render 'events/tabs'

= crud_table do |t|
  - t.col('Name')    do |p| 
    -# Any person listed can be shown
    = link_to(p.to_s, event_person_path(@event, p))
  - t.col('Funktion') {|p| p.participations_short(@event) }
  - t.col('Email')    {|p| p.email }
  - t.col('Telefon')  {|p| p.all_phone_numbers(true) }
  - t.col('Adresse')  {|p| p.complete_address }
  - t.col('Social')   {|p| p.all_social_accounts(true) }

