#main.row-fluid
  .span7
    = entry_form(cancel_url: role_cancel_url) do |f|
      = hidden_field_tag('return_url', params[:return_url])
      = f.hidden_field :group_id

      - if entry.person.persisted?
        - title("Rolle für #{entry.person} #{entry.persisted? ? 'bearbeiten' : 'erstellen'}")
        = f.hidden_field :person_id
        = render 'fields', f: f

      - else
        - title("Person hinzufügen")
        = render 'person_fields', f: f
        = field_set_tag 'Rolle'.html_safe do
          = render 'fields', f: f

  .span5
    %br/
    %br/
    #role_info
      = render 'info' if @type
