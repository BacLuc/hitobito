= entry_form do |f|
  - if entry.new_record?
    = f.hidden_field :group_id
    = f.hidden_field :type
    = f.hidden_field :person_id
    = f.labeled_string_field :person, data: {provide: 'person', id_field: 'role_person_id'}
    
  = f.labeled_input_fields(:label)

  = render_extensions :fields, locals: { f: f }